<div class= "container">
    <h1 class = "jumbotron" align="center"> It's BurgerTyme</h1>
    <div class = "row">
        <div class =  "col-md-5">
            <h2 >Burgers to Nom on</h2> 
            <ul>
                {{#each burgers}} 
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class ="devoured" data-id="{{this.id}}"> Devoured it!</button>
                </li>
                {{/unless}} 
                {{/each}}
            </ul>
        </div>
        <div class = "col-md-1"> </div>
        <div class = "col-md-5">
            <h2> Burgers I Nommed</h2>
            <ul> 
                {{#each burgers}}
                {{#if devoured}}
                <li> 
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <h3> Add a New Burger</h3>
    </div>
    <div class="row justify-content-center">
        <form class= "create-form">
                <label for="burger"> Burger Name: </label>
                <input type="text" id="burger" name="burger_name">
                <button type="submit btn-lg">Add Burger</button> 
        </form>
    </div>
</div>
